<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h3 class="lead"><%=product.name%> Review</h3>
				<div class="list-group">
				<li class="list-group-item active">
					<a class="product-link" style="color: white" 
					href="<%= product.producturl %>" 
					target="_blank">
						Bring me to the product page
					</a> <!-- to update in stylesheet -->
				</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%=product.image%>">
				<div class="caption-full">
					<h4><a><%= product.name %></a></h4>
					<p><%= product.description %></p>
					<a href="<%= product.producturl %>" target="_blank">Bring me to the product page</a>

				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/products/<%= product._id%>/comments/new">Add New Comment</a>
					<hr>
				</div>
				<% product.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">1 days ago</span>
						<p>
						<%= comment.text %>
						</p>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>


<%- include("../partials/footer") %>
